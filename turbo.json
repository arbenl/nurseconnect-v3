{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*"],
  "globalEnv": [
    "NODE_ENV",
    "FIRST_ADMIN_EMAILS",
    "APP_URL",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET",
    "DATABASE_URL",
    "SKIP_ENV_VALIDATION",
    "FEATURE_BACKEND_NURSE_PROFILE",
    "FEATURE_BACKEND_PATIENT_PROFILE",
    "FEATURE_BACKEND_SERVICE_REQUEST",
    "FEATURE_BACKEND_ASSIGNMENT",
    "FEATURE_BACKEND_VISIT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"]
    }
  }
}
