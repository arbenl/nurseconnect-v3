{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:nurseconnect:multi-agent:a2a-envelope",
  "title": "NurseConnect Multi-Agent A2A Contract",
  "description": "Contract for exporting NurseConnect multi-agent requests/results to A2A and importing partner responses.",
  "$defs": {
    "lane": {
      "type": "string",
      "enum": [
        "preflight-agent",
        "gatekeeper",
        "testing-agent",
        "compliance-agent",
        "verification-agent",
        "finalizer-agent"
      ]
    },
    "internalRequest": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "runId",
        "taskId",
        "mode",
        "budgetUsd",
        "estimatedCostUsd",
        "lanes",
        "createdAt"
      ],
      "properties": {
        "runId": { "type": "string", "minLength": 1 },
        "taskId": { "type": "string", "minLength": 1 },
        "mode": { "type": "string", "enum": ["single", "multi"] },
        "budgetUsd": { "type": "number", "minimum": 0 },
        "estimatedCostUsd": { "type": "number", "minimum": 0 },
        "lanes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/lane" }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "laneResult": {
      "type": "object",
      "additionalProperties": false,
      "required": ["lane", "status", "costUsd", "latencyMs", "notes"],
      "properties": {
        "lane": { "$ref": "#/$defs/lane" },
        "status": { "type": "string", "enum": ["pass", "fail", "skip"] },
        "costUsd": { "type": "number", "minimum": 0 },
        "latencyMs": { "type": "number", "minimum": 0 },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "internalResult": {
      "type": "object",
      "additionalProperties": true,
      "required": ["runId", "status", "lanes", "finishedAt"],
      "properties": {
        "runId": { "type": "string", "minLength": 1 },
        "status": { "type": "string", "enum": ["pass", "fail"] },
        "lanes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/laneResult" }
        },
        "artifacts": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "finishedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "requestEnvelope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocol", "kind", "id", "source", "target", "timestamp", "payload"],
      "properties": {
        "protocol": { "type": "string", "const": "a2a/1.0" },
        "kind": { "type": "string", "const": "nurseconnect.multiagent.request" },
        "id": { "type": "string", "minLength": 1 },
        "source": { "type": "string", "minLength": 1 },
        "target": { "type": "string", "minLength": 1 },
        "timestamp": { "type": "string", "format": "date-time" },
        "payload": { "$ref": "#/$defs/internalRequest" }
      }
    },
    "resultEnvelope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocol", "kind", "id", "source", "target", "timestamp", "payload"],
      "properties": {
        "protocol": { "type": "string", "const": "a2a/1.0" },
        "kind": { "type": "string", "const": "nurseconnect.multiagent.result" },
        "id": { "type": "string", "minLength": 1 },
        "source": { "type": "string", "minLength": 1 },
        "target": { "type": "string", "minLength": 1 },
        "timestamp": { "type": "string", "format": "date-time" },
        "payload": { "$ref": "#/$defs/internalResult" }
      }
    }
  },
  "oneOf": [
    { "$ref": "#/$defs/requestEnvelope" },
    { "$ref": "#/$defs/resultEnvelope" }
  ]
}
